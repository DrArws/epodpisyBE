# E-Signing Service Environment Variables
# Copy to .env for local development

# Environment
ENVIRONMENT=development
DEBUG=true

# GCP Project (for Secret Manager)
GCP_PROJECT_ID=your-gcp-project-id

# Supabase (using anon key + user JWT for RLS)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key

# Google Cloud Storage
GCS_BUCKET=your-gcs-bucket-name
GCS_SIGNED_URL_EXPIRATION_MINUTES=10

# Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_VERIFY_SERVICE_SID=your-verify-service-sid
TWILIO_WHATSAPP_FROM=+14155238886

# Application
APP_BASE_URL=http://localhost:8000
SIGNING_TOKEN_SALT=your-random-salt-string
ADMIN_API_SECRET=your-admin-api-secret

# Rate Limiting
OTP_RATE_LIMIT_REQUESTS=5
OTP_RATE_LIMIT_WINDOW_SECONDS=300

# NIA (Národní identitní autorita) - SAML2/eIDAS identity verification
# Set NIA_ENABLED=true to offer NIA as an identity verification option
NIA_ENABLED=false
NIA_ENV=test
# NIA_ENV=prod  # Use for production
NIA_ENTITY_ID=https://your-sp-entity-id
NIA_ACS_URL=http://localhost:8000/v1/nia/acs
# Test NIA endpoints (automatic based on NIA_ENV):
#   SSO: https://tnia.identita.gov.cz/FPSTS/saml2/basic
#   Metadata: https://tnia.identita.gov.cz/FPSTS/FederationMetadata/2007-06/FederationMetadata.xml
# Prod NIA endpoints:
#   SSO: https://nia.identita.gov.cz/FPSTS/saml2/basic
#   Metadata: https://nia.identita.gov.cz/FPSTS/FederationMetadata/2007-06/FederationMetadata.xml

# CORS - comma-separated list of allowed origins
ALLOWED_ORIGINS=https://drbacon.cz,https://podpisy.lovable.app,https://568552e5-4653-4c56-83ea-14ecd78a4cfb.lovableproject.com
